<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/myFilter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="10"
                android:ems="10"
                android:gravity="fill"
                android:hint="카페이름 검색"
                android:maxLines="1"
                android:textSize="18sp" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_search" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_weight="10">

            <ImageView
                android:id="@+id/reviewimage"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:onClick="onClick"
                android:layout_marginRight="10sp"
                app:srcCompat="@drawable/select"></ImageView>

            <Button
                android:id="@+id/imagebutton"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="1sp"
                android:onClick="onClick"
                android:text="사진 선택"
                android:textSize="15sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/reviewText"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:ems="10"
            android:gravity="top"
            android:hint="카페에 대한 간단한 소개와 리뷰를 작성해주세요!"
            android:inputType="textMultiLine|textNoSuggestions"
            android:maxLength="800"
            android:padding="10dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:text="0/800 자" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:ems="10"
                android:hint="hashtag1"
                 />

            <EditText
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:ems="10"
                android:hint="hashtag2"
                 />

            <EditText
                android:id="@+id/tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:ems="10"
                android:hint="hashtag3"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/sub"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/baseline_remove_black_18dp" />

            <RatingBar
                android:id="@+id/review_ratingbar"
                style="@style/Widget.AppCompat.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:max="5"
                android:numStars="5"
                android:rating="3"
                />

            <ImageButton
                android:id="@+id/add"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/baseline_add_black_18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/mood"
                    android:layout_width="182dp"
                    android:layout_height="96dp"
                    android:layout_weight="2"
                    android:paddingTop="30dp"
                    android:text="분위기"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="392dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/mood1"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="심플" />

                        <Button
                            android:id="@+id/mood2"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="어두컴컴" />

                        <Button
                            android:id="@+id/mood3"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="빈티지" />

                        <Button
                            android:id="@+id/mood4"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="아기자기" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/mood5"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="핑크" />

                        <Button
                            android:id="@+id/mood6"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="고급세련" />

                        <Button
                            android:id="@+id/mood7"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="아늑편안" />

                        <Button
                            android:id="@+id/mood8"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="로맨틱" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/taste"
                    android:layout_width="182dp"
                    android:layout_height="96dp"
                    android:layout_weight="2"
                    android:paddingTop="30dp"
                    android:text="맛"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="392dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageButton"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/coffee" />

                        <Button
                            android:id="@+id/coffe1"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="단맛" />

                        <Button
                            android:id="@+id/coffe2"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="쓴맛" />

                        <Button
                            android:id="@+id/coffe3"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="신맛" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/cake" />

                        <Button
                            android:id="@+id/dessert1"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="😍" />

                        <Button
                            android:id="@+id/dessert2"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="😄" />

                        <Button
                            android:id="@+id/dessert3"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="😡" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/restroom"
                    android:layout_width="182dp"
                    android:layout_height="96dp"
                    android:layout_weight="2"
                    android:paddingTop="30dp"
                    android:text="화장실"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="392dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/rgood"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="좋아요👍" />

                        <Button
                            android:id="@+id/rbad"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="나빠요👎" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/rest1"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="남녀구분" />

                        <Button
                            android:id="@+id/rest2"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="남녀공용" />

                        <Button
                            android:id="@+id/rest3"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="외부" />

                        <Button
                            android:id="@+id/rest4"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="내부" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- 가격-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingTop="13dp"
                    android:text="가격"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="392dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/price1"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="비싸요😠" />

                        <Button
                            android:id="@+id/price2"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="가성비 good😇" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/waiting"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingTop="13dp"
                    android:text="웨이팅"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="392dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/waiting1"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="없어요" />

                        <Button
                            android:id="@+id/waiting2"
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonborder"
                            android:text="있어요" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#59FF607F"
            android:text="REVIEW 제출하기" />
    </LinearLayout>
</ScrollView>