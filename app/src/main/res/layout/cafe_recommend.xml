<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_margin="19dp"
            android:scaleType="fitXY"
            android:background="#00ff0000"
            app:srcCompat="@drawable/previous" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:textSize="28sp"
            android:text="카페를 추천해줘!" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:background="#D6D6D6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/question" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="누구랑?" />
    </LinearLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:background="#008466" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/who1"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="친구" />

        <Button
            android:id="@+id/who2"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="커플" />

        <Button
            android:id="@+id/who3"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="가족" />

        <Button
            android:id="@+id/who4"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="혼자" />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginHorizontal="40dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ImageView5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/question" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="어디서?" />
</LinearLayout>
    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:background="#008466" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/where1"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="혜화" />

        <Button
            android:id="@+id/where2"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="망원동" />

        <Button
            android:id="@+id/where3"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="익선동" />

        <Button
            android:id="@+id/where4"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="연남동" />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginHorizontal="40dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ImageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/question" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="가격대(1인기준)?" />
</LinearLayout>
    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:background="#008466" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cost1"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="1만원이내" />

        <Button
            android:id="@+id/cost2"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="2만원이내" />

        <Button
            android:id="@+id/cost3"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="3만원이내" />

        <Button
            android:id="@+id/cost4"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="무관" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/question" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="먹고싶은 디저트?" />
    </LinearLayout>
    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:background="#008466" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dessert1"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="마카롱" />

        <Button
            android:id="@+id/dessert2"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="티라미수" />

        <Button
            android:id="@+id/dessert3"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="브런치" />

        <Button
            android:id="@+id/dessert4"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="타르트" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageView8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/question" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="어떤음료가 좋나요?" />
    </LinearLayout>
    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:background="#008466" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/drink1"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="쓰디쓴커피" />

        <Button
            android:id="@+id/drink2"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="달달한 스무디" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/drink3"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="따뜻한 차" />

        <Button
            android:id="@+id/drink4"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:text="든든한 라떼" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_margin="25dp"
        android:layout_weight="1"
        android:background="#8BC1AC"
        android:textSize="19sp"
        android:text="추천받기" />

</LinearLayout>